<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:filterTouchesWhenObscured="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageButton
            android:id="@+id/wl_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/wl_btn_close"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/wl_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/wl_btn_back"
            android:background="@android:color/transparent"
            android:visibility="invisible"/>

        <!--<TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:visibility="invisible"/>-->

        <TextView
            android:id="@+id/wl_txt_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/wl_btn_close"
            android:layout_toEndOf="@+id/wl_btn_back"
            android:layout_centerInParent="true"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:text="test"/>

    </RelativeLayout>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</ScrollView>